<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/offWhite</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>

    <style name="TextHeading">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextSubheading">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextCaption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mediumGray</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="CardStyle">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>
</resources>